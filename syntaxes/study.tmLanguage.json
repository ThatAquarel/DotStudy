{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DotStudy",
	"patterns": [
		{
			"include": "#title"
		},
		{
			"include": "#subtitle"
		},
		{
			"include": "#expression"
		}
	],
	"repository": {
		"title": {
			"patterns": [
				{
					"name": "keyword.control.study",
					"match": "#.*"
				}
			]
		},
		"subtitle": {
			"patterns": [
				{
					"name": "variable.name.study",
					"match": "!.*"
				}
			]
		},
		"expression": {
			"patterns": [
				{
					"include": "#question"
				},
				{
					"include": "#answer"
				}
			]
		},
		"question": {
			"begin": "^",
			"end": "(\\.|\\?)",
			"endCaptures": {
				"0": {
					"name": "keyword.operator.new.study"
				}
			},
			"patterns": [
				{
					"name": "entity.name.class.study",
					"match": "([^!#\\.\\?]?)+"
				}
			]
		},
		"answer": {
			"patterns": [
				{
					"name":"string.study",
					"match": "(?<=^[^!#\\.\\?]*\\.|\\?).*$"
				}
			]
		}
	},
	"scopeName": "source.study"
}